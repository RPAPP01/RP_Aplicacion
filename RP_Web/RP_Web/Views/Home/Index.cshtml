
<!DOCTYPE html>
<html lang="en">
<body class="hold-transition sidebar-mini">
    <!-- Main content -->
    <section class="content" >
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-6">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-gra">Reservar</h3>
                        </div>

                        <form>
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Nombre de la Persona que Reserva</label>
                                    <input type="text" class="form-control" id="nombre" placeholder="">
                                </div>
                                @*<div class="form-group">
                <label for="exampleInputEmail1">Lugar:</label>
                <input type="text" class="form-control" id="lugar" placeholder="">
            </div>*@
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Numero de personas</label>
                                    <input type="number" class="form-control" id="personas" placeholder="">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Hora</label>
                                    <input type="time" class="form-control" id="hora" placeholder="">
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputPassword1">Fecha</label>
                                    <input type="date" class="form-control" id="fecha" placeholder="">
                                </div>

                            </div>

                            <div class="card-footer">
                                <button type="submit" class="btn btn-success" onclick="prueba()">Reservar </button>
                            </div>

                        </form>
                    </div>

                    <!-- Horizontal Form -->
                    <div class="card card-info">
                        <div class="card-header">
                            <h3 class="card-title">Horizontal Form</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form class="form-horizontal">
                            <div class="card-body">
                                <div class="form-group row">
                                    <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
                                    <div class="col-sm-10">
                                        <input type="email" class="form-control" id="inputEmail3" placeholder="Email">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
                                    <div class="col-sm-10">
                                        <input type="password" class="form-control" id="inputPassword3" placeholder="Password">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="offset-sm-2 col-sm-10">
                                        <div class="form-check">
                                            <input type="checkbox" class="form-check-input" id="exampleCheck2">
                                            <label class="form-check-label" for="exampleCheck2">Remember me</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">
                                <button type="submit" class="btn btn-info">Sign in</button>
                                <button type="submit" class="btn btn-default float-right">Cancel</button>
                            </div>
                            <!-- /.card-footer -->
                        </form>
                    </div>
                </div>

                <!-- right column -->
                <div class="col-md-6">
                    <!-- Form Element sizes -->
                    <div class="card card-success">
                        <div class="card-header">
                            <h3 class="card-title">Different Height</h3>
                        </div>
                        <div class="card-body">
                            <input class="form-control form-control-lg" type="text" placeholder=".form-control-lg">
                            <br>
                            <input class="form-control" type="text" placeholder="Default input">
                            <br>
                            <input class="form-control form-control-sm" type="text" placeholder=".form-control-sm">
                        </div>
                        <!-- /.card-body -->
                    </div>

                </div>
                <!--/.col (right) -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
</body>
</html>

<script src="~/Scripts/Scripts_Views/reserva.js"></script>